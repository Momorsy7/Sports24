const teamArticles = document.querySelectorAll('.teams article');

teamArticles.forEach(article => {
    article.addEventListener('mouseover', () => {
        article.style.backgroundColor = '#f0f8ff';
    });
    article.addEventListener('mouseout', () => {
        article.style.backgroundColor = 'white';
    });
});<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $name = htmlspecialchars($_POST['name']);
    $email = htmlspecialchars($_POST['email']);
    $message = htmlspecialchars($_POST['message']);

    // إرسال الرسالة بالبريد الإلكتروني
    $to = "admin@sporthub.com";
    $subject = "رسالة جديدة من: $name";
    $body = "الاسم: $name\nالبريد الإلكتروني: $email\n\nالرسالة:\n$message";

    if (mail($to, $subject, $body)) {
        echo "تم إرسال رسالتك بنجاح!";
    } else {
        echo "حدث خطأ أثناء إرسال الرسالة. حاول مرة أخرى.";
    }
}
?>

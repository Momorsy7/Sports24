document.addEventListener("DOMContentLoaded", () => {
    const scoresSection = document.getElementById("scores");

    // محاكاة بيانات النتائج المباشرة
    const liveScores = [
        { match: "فريق A ضد فريق B", score: "2-1" },
        { match: "فريق C ضد فريق D", score: "1-1" },
    ];

    // عرض النتائج في الصفحة
    scoresSection.innerHTML = liveScores
        .map(score => `<p>${score.match}: <strong>${score.score}</strong></p>`)
        .join("");
});/* تحسين التصميم */
